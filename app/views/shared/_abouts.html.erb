<!-- Start About Area -->
<% if About.exists? %>
<section class="about-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
              <% @headers.take(1).each do |a| %>
                <div class="about-image">
                    <img src="<%= a.abtsectionimg_url.to_s %>" alt="image">
                </div>
            </div>

            <div class="col-lg-6">
                <div class="about-content">
                    <div class="title">
                        <h3><%= a.abouts_title %></h3>
                        <span><%= a.abouts_sub_title %></span>
                    </div>
                    <% end %>

                    <% @abouts.take(1).each do |a| %>
                      <p><%= raw(a.sub_title) %> </p>

                        <% end %>
                </div>
                <div class="section-btn">
                  <%= link_to abouts_path, class: "default-btn" do %>

                        Our Company ->
                        <span></span>
                    <% end %>
                </div>

            </div>
        </div>
    </div>
</section>
