            <div class="row">
              <% @blogs.each do |a| %>
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog">
                        <%=link_to a do %>
                          <img src="<%= a.blogimg_url.to_s %>" alt="image">
                        <% end %>

                        <div class="blog-content">
                            <div class="tag">News</div>
                            <h3>
                              <%=link_to a do %>
                                <%= a.title %>
                                <% end %>
                            </h3>
                            <ul class="post-meta">
                                <li>
                                    <i class="flaticon-user"></i>
                                    By:
                                    <a href="#">Admin</a>
                                </li>
                                <li>
                                    <i class="flaticon-calendar"></i>
                                    <%= a.created_at %>
                                </li>
                            </ul>
                            <p><%= a.sub_title %>.</p>
                        </div>
                    </div>
                </div>
