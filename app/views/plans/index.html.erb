<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Name</th>
      <th>Referal</th>
      <th>Duration</th>
      <th>Plan</th>
      <th>Plan name</th>
      <th>Mini</th>
      <th>Maxi</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.amount %></td>
        <td><%= plan.name %></td>
        <td><%= plan.referal %></td>
        <td><%= plan.duration %></td>
        <td><%= plan.plan %></td>
        <td><%= plan.plan_name %></td>
        <td><%= plan.mini %></td>
        <td><%= plan.maxi %></td>
        <td><%= plan.body %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

