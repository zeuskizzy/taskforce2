
<%= simple_form_for(@rentalproduct) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :sub_title %>
    <%= f.input :desc %>
    <%= f.input :body %>
    <%= f.input :slug %>
    <%= f.input :rental_id %>
    <%= f.input :price %>
    <%= f.input :discount %>
    <%= f.input :location_id %>
    <%= f.input :service_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
